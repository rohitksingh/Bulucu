<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/parentPanel"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="60dp"
        android:padding="20dp"
        >
        <com.skyfishjy.library.RippleBackground
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/content"
                android:layout_margin="20dp"
                app:rb_color="#81c784"
                app:rb_radius="20dp"
                app:rb_rippleAmount="3"
                app:rb_duration="3000"
                app:rb_scale="6"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center"
                    >
            <ImageView
                android:id="@+id/openNetwork"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/open_network"
                />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#ffffff"
                    style="@style/Line"
                    />
                <TextView
                    android:id="@+id/open"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No Network"
                    android:textColor="#ffffff"
                    />
                <TextView
                    android:id="@+id/openNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    />
                </LinearLayout>
            </com.skyfishjy.library.RippleBackground>
        <com.skyfishjy.library.RippleBackground
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_margin="20dp"
            android:id="@+id/closeContainer"
            app:rb_color="#f44336"
            app:rb_radius="32dp"
            app:rb_rippleAmount="4"
            app:rb_duration="3000"
            app:rb_scale="6">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center"
                >
            <ImageView
                android:id="@+id/closeNetwork"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/closed_network"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#ffffff"
                style="@style/Line"
                />
            <TextView
                android:id="@+id/close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ShadowX"
                android:textColor="#ffffff"
                />
            <TextView
                android:id="@+id/closeNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                />
            </LinearLayout>
        </com.skyfishjy.library.RippleBackground>
    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        >
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieAnimation"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            app:lottie_fileName="red_scan.json"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            />
        <TextView
            android:id="@+id/scanNow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Networks Available: 0"
            android:textColor="#ffffff"
            android:textSize="10dp"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            />
    </FrameLayout>

    <TextView
        android:id="@+id/scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scan Now"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:layout_marginBottom="30dp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:background="@drawable/connect"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        />
</RelativeLayout>